<%- layout('layout') %>

<div class="container">

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
            </button>
            <a class="navbar-brand" href="/">Flash Zone</a>
          </div>
            <div id="navbar" class="navbar-collapse collapse">
              <header>
                <div>
                  <a class="navbar-brand" href="/">categories</a>
                </div>
                <div>
                  <a class="navbar-brand" href="#"><%= editprofile.profile.name %></a>
                </div>
                <div>
                  <a class="navbar-brand" href="/logout">Logout</a>
                </div>
                <div>
                  <a class="navbar-brand" href="#"><i class="bi bi-cart-fill"></i></a>
                </div>
              </header>  
          </div>
        </div>
    </nav>

    <div class="row align-items-center">
        <div id="signup-id" class="col-lg-6">

            <form method="post" class="login" id="editprofile" action="/editprofile" enctype="multipart/form-data">
                <h1 class="text-center">Edit Profile</h1>
                <input id="picture" type="file" name="picture">
                <div class="form-group">
                    <label>Name: </label>
                    <input type="text" class="form-control" name="name" value="<%= editprofile.profile.name %>">
                </div>
                <div class="form-group">
                    <label>Email: </label>
                    <input type="email" class="form-control" name="email" value="<%= editprofile.email %>">
                </div>
                <div class="form-group">
                    <label>Address: </label>
                    <input type="text" class="form-control" name="address" value="<%= editprofile.address %>">
                </div>
                <div class="form-group">
                    <label>Phone Number: </label>
                    <input type="text" class="form-control" name="phonenumber" value="<%= editprofile.phonenumber %>">
                </div>
                <button id="editbutton" type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>