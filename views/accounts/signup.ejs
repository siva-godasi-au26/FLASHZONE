<%- layout('layout') %>

<div class="container">

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
            </button>
            <a class="navbar-brand" href="/">Flash Zone</a>
          </div>
            <div id="navbar" class="navbar-collapse collapse">
              <header>
                <div>
                <a class="navbar-brand" href="/">categories</a>
                </div>
                <div>
                <a class="navbar-brand" href="/signup">Signup</a>
                </div>
                <div>
                  <a class="navbar-brand" href="/login">Login</a>
                </div>
                <div>
                  <a class="navbar-brand" href="#"><i class="bi bi-cart-fill"></i></a>
                </div>
              </header>  
          </div>
        </div>
    </nav>
    
    <div class="row align-items-center">
        <div id="signup-id" class="col-lg-6">

            <form method="post" id="signup" action="/signup">
                <div>
                    <% if (errors.length > 0) { %>
                        <div class="btn btn-danger">
                            <%= errors %>
                        </div>
                    <% } %>
                </div>
                <h1 class="text-center">SignUp</h1>
                <div class="form-group">
                    <label>Name: </label>
                    <input type="text" class="form-control" name="name" placeholder="Enter name here" required>
                </div>
                <div class="form-group">
                    <label>Email: </label>
                    <input type="email" class="form-control" name="email" placeholder="Enter mail here" required>
                </div>
                <div class="form-group">
                    <label>password: </label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password here" required>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>